#!/usr/bin/env python
import sys

# have to import this in order to have config for db connection
import ckan.tests
import ckan.models

if __name__ == '__main__':
    action = sys.argv[1]
    print action
    if action == 'rebuild':
        ckan.models.repo.rebuild()
    elif action == 'testdata':
        ckan.models.repo.rebuild()
        ckan.tests.create_test_data()
    else:
        print 'Unknown action %s' % action

